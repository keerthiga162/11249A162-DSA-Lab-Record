#include <stdio.h>
#define SIZE 100 
void display(int arr[], int n) {
    if (n == 0) {
        printf("Array is empty.\n");
        return;
    }
    printf("Array elements: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}
int insert(int arr[], int n, int pos, int value) {
    if (n >= SIZE) {
        printf("Array overflow! Cannot insert more elements.\n");
        return n;
    }
    if (pos < 0 || pos > n) {
        printf("Invalid position!\n");
        return n;
    }
    for (int i = n; i > pos; i--) {
        arr[i] = arr[i - 1];
    }
    arr[pos] = value;
    printf("Element %d inserted at position %d.\n", value, pos);
    return n + 1;
}
int delete(int arr[], int n, int pos) {
    if (n == 0) {
        printf("Array underflow! No elements to delete.\n");
        return n;
    }
    if (pos < 0 || pos >= n) {
        printf("Invalid position!\n");
        return n;
    }
    printf("Element %d deleted from position %d.\n", arr[pos], pos);
    for (int i = pos; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    return n - 1;
}

void search(int arr[], int n, int key) {
    int found = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] == key) {
            printf("Element %d found at position %d.\n", key, i);
            found = 1;
            break;
        }
    }
    if (!found)
        printf("Element %d not found in the array.\n", key);
}

int main() {
    int arr[SIZE], n = 0, choice, value, pos, key;
    do {
        printf("\n--- Array Operations Menu ---\n");
        printf("1. Insert element\n");
        printf("2. Delete element\n");
        printf("3. Search element\n");
        printf("4. Display elements\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1:
                printf("Enter element to insert: ");
                scanf("%d", &value);
                printf("Enter position (0 to %d): ", n);
                scanf("%d", &pos);
                n = insert(arr, n, pos, value);
                break;

            case 2:
                printf("Enter position to delete (0 to %d): ", n - 1);
                scanf("%d", &pos);
                n = delete(arr, n, pos);
                break;

            case 3:
                printf("Enter element to search: ");
                scanf("%d", &key);
                search(arr, n, key);
                break;

            case 4:
                display(arr, n);
                break;

            case 5:
                printf("Exiting program.\n");
                break;

            default:
                printf("Invalid choice! Try again.\n");
        }
    } while (choice != 5);

    return 0;
}
